# Maintainer: Thomas S Hatch <thatch45 at gmail dot com>
# Contributor: Luciano A. Ferrer <laferrer@gmail.com>
pkgname=liquidsoap
pkgver=0.9.3
pkgrel=1
arch=('i686' 'x86_64')
license=('GPL')
pkgdesc="Liquidsoap is the audio stream generator of the Savonet project"
url="http://savonet.sourceforge.net/"
install=liquidsoap.install
makedepends=('ocaml'
    'ocaml-ogg'
    'ocaml-vorbis'
    'ocaml-cry'
    'ocaml-mad'
    'ocaml-lame'
    'ocaml-taglib'
    'ocaml-magic'
    'ocaml-soundtouch'
    'ocaml-xml-light'
    'ocaml-camomile'
    'ocaml-alsa')
depends=('wget' 'festival')
optdepends=('festival: Multi-lingual speech synthesis')
source=("http://downloads.sourceforge.net/savonet/$pkgname-$pkgver.tar.bz2")
md5sums=('2513a7df950a0936f49fd010f9a6f916')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr \
    --localstatedir=/var \
    --sysconfdir=/etc \
    --with-user=140 \
    --with-group=140
  make 
  make DESTDIR="${pkgdir}" \
    datadir="${pkgdir}/usr/share/" \
    mandir="${pkgdir}/usr/share/man/" \
    localstatedir="${pkgdir}/var" \
    bindir="${pkgdir}/usr/bin/" \
    libdir="${pkgdir}/usr/lib/"\
    sysconfdir="${pkgdir}/etc/" \
    install
}
