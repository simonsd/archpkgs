# Maintainer: Thomas S Hatch <thatch45 (at) Gmail (dot) com>

pkgname=febootstrap
pkgver=3.3
pkgrel=4
license=('GPL2')
arch=('i686' 'x86_64')
pkgdesc="Tool used to create libguestfs supermin appliances"
url="http://people.redhat.com/~rjones/febootstrap/"
depends=('pacman-contrib' 'wget' 'cpio')
makedepends=('ocaml' 'ocaml-findlib')
source=("http://people.redhat.com/~rjones/${pkgname}/files/${pkgname}-${pkgver}.tar.gz"
        "Archlinux-support.patch"
        "Archlinux-kernel.patch")
md5sums=('3d645ec4e542794fd38cfe30dd5da64a'
         '3e57695fc42a2a070b3658181724d304'
         'df2bc1137e0e7ba200494a6016454ce0')

build() {
  cd "${srcdir}"
  patch -p0 < Archlinux-support.patch
  patch -p0 < Archlinux-kernel.patch
  cd "${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make 
}

package () {
  cd "${pkgname}-${pkgver}"
  make DESTDIR=${pkgdir} install
}
