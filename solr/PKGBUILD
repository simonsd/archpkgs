# Maintainer: Thomas S Hatch <thatch45 at gmail dot com>
pkgname=solr3-svn
pkgver=1057454
pkgrel=1
pkgdesc="Future branch of solr search suite"
arch=('any')
url="http://lucene.apache.org/solr/"
license=('Apache')
depends=('java-environment=6')
makedepends=('subversion')
install=

_svntrunk=https://svn.apache.org/repos/asf/lucene/dev/branches/branch_3x/
_svnmod=solr
DEST="${pkgdir}/usr/share/java/solr"
DOC="${pkgdir}/usr/share/doc/solr"

build() {
  cd "$srcdir"

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn export $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_svnmod-build"
  cp -r "$srcdir/$_svnmod" "$srcdir/$_svnmod-build"
  cd "$srcdir/$_svnmod-build"

  #
  # BUILD
  #
  cd solr/
  ant example
}

package() {
  cd "$srcdir/$_svnmod-build/solr"
  mkdir -p $DEST
#  mkdir -p $DOC
  find example -name .svn -exec rm -rf {} \;
  cp -r example/* $DEST
#  cp -r doc/* $DOC
}
